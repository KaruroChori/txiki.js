{
  "compilerOptions": {
    "lib": ["ES2020", "dom"],
    "target": "ESNext",
    "noImplicitAny": true,
    "baseUrl": ".",
    "typeRoots": ["./node_modules/@types"]
  },
  "typedocOptions": {
    "name": "txiki.js",
    "entryPoints": ["types/"],
    "entryPointStrategy": "expand",
    "out": "api/",
    "readme": "intro.md",
    "disableSources": true,
    "exclude": ["types/index.d.ts"]
  },
  "watchOptions": {
    "excludeDirectories": ["api/*"]
  },
  "include": ["types/**/*.ts"]
}
